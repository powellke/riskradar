{
  "name": "riskradar",
  "version": "1.0.0",
  "description": "NPM Package Vulnerability Scanner",
  "main": "dist/index.js",
  "bin": {
    "riskradar": "dist/index.js"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-linux-x64"
    ]
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "package": "npm run build && pkg . --out-path bin"
  },
  "keywords": [
    "security",
    "npm",
    "vulnerability",
    "scanner"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^25.3.0",
    "adm-zip": "^0.5.16",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.3",
    "csv-parser": "^3.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}